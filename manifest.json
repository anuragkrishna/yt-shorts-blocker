{
  "manifest_version": 3,
  "name": "YouTube Shorts Blocker",
  "version": "1.0.0",
  "description": "Block YouTube Shorts from appearing in your feed and sidebar",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}

